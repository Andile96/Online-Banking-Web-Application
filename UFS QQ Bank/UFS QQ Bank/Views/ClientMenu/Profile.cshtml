@model ProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<link href="~/styles/clientmenu/profile.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="text-center mb-4">Profile Information</h2>

    <div class="profile-container">
     
        <div class="profile-picture-section">
            <div>
                @if (Model.Profile != null && Model.Profile.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Profile)" alt="Profile Picture" class="profile-picture" />
                }
                else
                {
                    <img src="/images/user-camera-3355.png" alt="Default Profile Picture" class="profile-picture" />
                }
            </div>
            <div class="profile-info">
                <p><strong>@Model.FirstName @Model.LastName</strong></p>
                <p>@Model.Email</p>
            </div>
        </div>

       
        <div class="user-details-section">
            <form asp-action="Profile" method="post" enctype="multipart/form-data">
                <div class="row">
                    
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                    </div>

                 
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                    </div>
                </div>

                <div class="row">
                   
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                 
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" />
                    </div>
                </div>

                <div class="row">
                 
                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <input asp-for="Gender" class="form-control" />
                    </div>

                   
                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                    </div>
                </div>

                <div class="row">
                   
                    <div class="col-md-6">
                        <label asp-for="EmployeeOrStudentNumber" class="form-label">Employee/Student Number</label>
                        <input asp-for="EmployeeOrStudentNumber" class="form-control" />
                    </div>

                   
                    <div class="col-md-6">
                        <label asp-for="IDOrPassportNumber" class="form-label">ID/Passport Number</label>
                        <input asp-for="IDOrPassportNumber" class="form-control" />
                    </div>
                </div>

                <div class="row">
                  
                    <div class="col-md-6">
                        <label asp-for="UserType" class="form-label">User Type</label>
                        <input asp-for="UserType" class="form-control" />
                    </div>

                   
                    <div class="col-md-6">
                        <label asp-for="ProfilePicture" class="form-label">Upload Profile Picture</label>
                        <input asp-for="ProfilePicture" type="file" class="form-control" />
                    </div>
                </div>

                <div class="mt-4">
                    <a type="button" asp-action="ChangePassword" class="btn btn-primary">Change Password</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-controller="ClientMenu" asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

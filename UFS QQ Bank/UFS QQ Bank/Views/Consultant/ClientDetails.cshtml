@model BankAccount

@{
    ViewBag.Title = "Client Account Details";
}

<div class="container mt-5">
    <h2>Client Account Details</h2>

    <div class="card">
        <div class="card-header">
            <h5>Account Information</h5>
        </div>
        <div class="card-body">
            <p><strong>Account Holder:</strong> @Model.AccountHolder</p>
            <p><strong>Account Number:</strong> @Model.AccountNumber</p>
            <p><strong>Account Type:</strong> @Model.AccountType</p>
            <p><strong>Account Balance:</strong> @Model.AccountBalance.ToString("C")</p>
        </div>
    </div>

    <h4 class="mt-4">Perform Transaction</h4>

    <form asp-action="PerformTransaction" method="post">
        <input type="hidden" name="accountNumber" value="@Model.AccountNumber" />
        <div class="form-group">
            <label for="transactionType">Transaction Type</label>
            <select name="transactionType" class="form-control" required>
                <option value="Withdraw">Withdraw</option>
                <option value="Deposit">Deposit</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="Amount">Amount</label>
            <input type="number" step="0.01" name="amount" class="form-control" placeholder="Amount" required />
        </div>

        <button type="submit" class="btn btn-success mt-3" onclick="return confirm('Please confirm if you what to proceed with transaction?')">Submit Transaction</button>
    </form>
</div>

@model NotificationViewModel
<link href="~/styles/viewallnotification.css" rel="stylesheet" />
<div class="container mt-5">
    <h2 class="mb-4">Notifications</h2>

    @if (Model.Notifications != null && Model.Notifications.Count > 0)
    {
        <ul class="list-group">
            @foreach (var notification in Model.Notifications)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">@notification.Message</div>
                        <small class="text-muted">
                            <i class="fa fa-clock me-1"></i>
                            @notification.Created_At.ToString("MMMM dd, yyyy HH:mm")
                        </small>
                    </div>
                    <!-- You can add an icon for unread notifications if needed -->
                    @if (!notification.IsRead)
                    {
                        <span class="badge bg-danger rounded-pill">New</span>
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fa fa-info-circle me-2"></i>No notifications available.
        </div>
    }
</div>

@model DeleteClientViewModel

@{
    ViewData["Title"] = "Delete Client";
}

<link href="~/styles/clients/delete.css" rel="stylesheet" />

<div class="overlay">
 
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h3>Confirm Deletion of Client</h3>
        </div>
        <div class="card-body">
       
            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <p class="text-muted">Are you sure you want to delete this client? This action cannot be undone.</p>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Last Name:</label>
                    <p class="form-control-plaintext">@Model.LastName</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">First Name:</label>
                    <p class="form-control-plaintext">@Model.FirstName</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Gender:</label>
                    <p class="form-control-plaintext">@Model.Gender</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Date of Birth:</label>
                    <p class="form-control-plaintext">@Model.DateOfBirth</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Mobile:</label>
                    <p class="form-control-plaintext">@Model.Phone</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Email:</label>
                    <p class="form-control-plaintext">@Model.Email</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">User Type:</label>
                    <p class="form-control-plaintext">@Model.UserType</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Staff/Student No:</label>
                    <p class="form-control-plaintext">@Model.EmployeeOrStudentNumber</p>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">ID/Passport No:</label>
                    <p class="form-control-plaintext">@Model.IDOrPassportNumber</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <form method="post" asp-action="ConfirmDelete" asp-route-id="@Model.Email">
                <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want delete this user?')" />
                <a asp-action="ClientUsers" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
